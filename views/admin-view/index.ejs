                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(54, 162, 235)',
                        'rgb(153, 102, 255)',
                        'rgb(201, 203, 207)'
                    ],
                    borderWidth: 1
                }]
            }
        });
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['COD', 'online'],
                datasets: [{
                    label: 'Payment Method',
                    data: ['<%=cod%>', '<%=online%>'],
                    backgroundColor: [
                        'rgb(255, 0, 0)',
                        'rgb(128, 128, 128)'
                    ],
                    hoverOffset: 4
                }]
            }
        });
    </script>


