    <script>
function remove(id,index){
    
   $.ajax({
    
      url:'/removeorder',
      method:'post',
      data:{
          id:id,
          index:index
      },
      success:(response)=>{
		if(response.success){
			location.reload()
		}else{
			location.href='/myorders'
		}
            
         }

   })
}

function cancel(id,status){
	
$.ajax({
    
	url:'/cancel-order',
	method:'post',
	data:{
		id,
		status	
	},
	success:(response)=>{
	  if(response.success){
		  location.reload()
	  }else{
		  location.href='/myorders'
	  }
		  
	   }

 })
}





