<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification Form</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
 

 
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">OTP VERIFICATON</h2>
            <form action="" method="post">
              <div class="form-group">
                <label for="otp">Enter OTP</label>
                <div class="input-group">
                  <input type="text" onclick="changeP()"class="form-control" name="otp" id="otp" placeholder="Enter - 6 - digits">

                </div>
              
              </div>
              <p id="countdown-timer">OTP will expire in <span id="countdown">30</span>Â seconds.</p>
              <div class="text-center" >
            <input type="submit" id="btn" class="btn btn-primary btn-block m-2 " value="VERIFY" >
            <p   id="msg"   style="color: red;" ><%=msg%></p>
          </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function changeP(){
        const ptag = document.getElementById('msg')
        ptag.innerText = ''
    }


    function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    setInterval(function () {
        minutes = parseInt(timer / 60, 10)
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = duration;
        }
    }, 1000);
}

var countdown = document.getElementById("countdown");
var countdownTimer = document.getElementById("countdown-timer");

startTimer(30, countdown);
// Update timer element and display message when OTP expires
function countdownExpired() {
  countdownTimer.innerHTML = 'OTP has expired. Resend the OTP <a href="/resentotp">here</a>.';

// Change the text color to red
countdownTimer.style.color = "red";

}

setTimeout(countdownExpired, 30000);

  </script>