
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<section style="background-color: #eee;">
    <div class="container py-5">
      <div class="breadcrumbs">
        <div class="container">
          <div class="row">
            <div class="col">
              <p class="bread"><span><a href="women">Back</a></span> / <span>Profile</span></p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
                <% if(user.image){ %>
                    <img src="admin/img2/<%=user.image%>" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
                <% }else{ %>
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
                <%}%>
              <h5 class="my-3"><%=user.username%></h5>
             
              <div class="d-flex justify-content-center mb-2">
               <a href="/editprofile" class="btn btn-primary" >Edit</a>
              
              
              </div>
            </div>

            <div class="card">
                <div class="card-body">
                  <h5 class="card-title">My Wallet</h5>
                  <h6 class="card-subtitle mb-2 text-muted">Available balance:</h6>
                  <h5 class="card-text" >$<%=user.wallet%>.00</h5>
                  <a  class="btn btn-outline-primary ms-1" href="/wallet-history">wallet-history</a>
                  <a class="btn btn-outline-primary ms-1" href="/coupons">
                    
                    <img height="20px" width="20px" src="/admin/imagies/coupon.png" alt="coupon">Coupons
                   </a>
                 
                </div>
              </div>

<!-- coupens -->
<br>
<div  class="card ">
  

   
  </div>
 

          </div>
         


        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=user.username%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=user.email%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=user.mobile%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Join Date</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=user.Date.toISOString().substring(10,0)%></p>
                </div>
              </div>
              <hr>
              <!-- Adress -->
              <% if( address!=null){ %>
              <% if(address.adress.length !==0 ){%>
                <a href="/newadress?profile=1" class="btn btn-primary ">Add Address</a>
              <%for(let i =0 ; i< address.adress.length;i++){%>
               
              <div class="card mb-4 mb-lg-0">
                
                <div style="width: 100%;" class="card-body ">
                    <a  href="/deleteaddress?id=<%=i%>&profile=1"><img width="25px" height="25px" class="float-right" src="/admin/imagies/delete.png" alt="delete"></a>   <a href="/editaddress?id=<%=i%>&profile=1"><img class="float-right mr-2" width="25px" height="25px" src="/admin/imagies/edit.png" alt="Edit"></a> 
                  <ul>
                    <li >
                       
                       
                      <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                      <p class="mb-0  ">  <%=address.adress[i].fname%> <br>
                        <%=address.adress[i].adress%> <br>
                        Ph : <%=address.adress[i].mobile%>,
                        <%=address.adress[i].email%> <br>
                        <%=address.adress[i].pincode %></p>
                    </li>
                  </ul>
                </div>
              </div>
            <%}%>
            <%}else{%>
                <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"> <a href="/newadress?profile=1" class="btn btn-primary ">Add Address</a></p>
                    </div>
                  </div>
                <%}%>
                <%}else{%>
                    <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                          <p class="text-muted mb-0"> <a href="/newadress?profile=1" class="btn btn-primary ">Add Address</a></p>
                        </div>
                      </div>
                      <%}%>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </section>

  <style>
    .card {
      display: flex;
      justify-content: center;
      align-items: center;
      
    }
  

    </style>