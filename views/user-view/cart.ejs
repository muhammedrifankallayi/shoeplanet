		<script>
//  count increasing .........
			function changecount(id,count,q){
			  console.log(count)
			  console.log(id)
			  $.ajax({
				url:'/changeCount',
				method:'post',
				data:{
				  id:id,
				  count:count,
				  q:q
				},
				success:(response)=>{
				  document.getElementById(id).value=response.count
				}
			  })
			}


			// deleting products
			function sendRequest(query) {
				Swal.fire({
            title:'Delete. are you sure!',
            text:"You want to remove this Item from Cart!",
            icon:"warning",
            showCancelButton:'True',
            confirmButtonColor:"#3085d6",
            CancelButtonColor:'#d33',
            confirmButtonText:'Yes'
        }).then((result)=>{
          if(result.isConfirmed){
			var xhr = new XMLHttpRequest();
			
			var url = "/cartprDlt?proId=" + encodeURIComponent(query);

			xhr.open("GET", url, true);

			xhr.send();
			
			document.getElementById(query).remove();
		  }})
				
		}
		  </script>

