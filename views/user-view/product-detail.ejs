			function ToCart(id){
				console.log(id+'this is Id ');
   
   $.ajax({
	  url:'/product-detail',
	  method:'post',
	  data:{
		  product_id:id
	  },
	  success:(response)=>{
		if(response.success){         
					Swal.fire({
  position: 'center',
  icon: 'success',
  title: 'Added to cart',
  showConfirmButton: false,
  timer: 1500
})
                   }else if(response.size){
					Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Please selected a size!'
      })

				   }else{
					Swal.fire({
        icon: 'error',
        title: 'Cant to add!',
        text: 'Something went wrong!'
      })
				   }
		 }

   })
}
		</script>

